<div id='user_nav'>
  <%= link_to "Sign in with twitter", '/auth/twitter' %>
</div>
<div id="surveys">
  <ul>
    <%- @surveys.each do |survey| %>
      <li>
        <span>Question: <%= survey.question %></span><br/>
        <span>Result: <%= survey.result %></span><br/>
        <span class="show_survey"><%= link_to 'Show', survey_url(survey) %></span>&nbsp;|&nbsp;
        <span class="edit_survey"><%= link_to 'Edit', edit_survey_url(survey) %></span>
      </li>
    <%- end %>
  </ul>
</div>
<%= link_to 'New Survey', new_survey_url %>
    